@model CursinhoEACH.DTO.ClassDTO
@{ ViewData["Title"] = "Adicionar turma"; int currentYear = DateTime.UtcNow.Year; }
<p class="text-muted">Cadastrar nova turma.</p>
<form asp-action="CreatePost" method="post" class="needs-validation" novalidate autocomplete="off" id="createTurmaForm">
    @Html.AntiForgeryToken()
    <div class="card mb-3">
        <div class="card-body">
            <h6 class="mb-3">Dados da turma</h6>
            <div class="row g-3">
                <div class="col-12 col-md-4">
                    <label asp-for="Ano" class="form-label">Ano <span class="text-danger">*</span></label>
                    <select asp-for="Ano" class="form-select" required>
                        <option value="" disabled selected>Selecione...</option>
                        @for (int y = currentYear + 1; y >= 2015; y--) { <option value="@y">@y</option> }
                    </select>
                </div>
                <div class="col-12 col-md-4">
                    <label asp-for="Periodo" class="form-label">Per√≠odo <span class="text-danger">*</span></label>
                    <select asp-for="Periodo" class="form-select" required>
                        <option value="" disabled selected>Selecione...</option>
                        <option value="M">Matutino</option>
                        <option value="V">Vespertino</option>
                        <option value="N">Noturno</option>
                    </select>
                </div>
                <div class="col-12 col-md-4">
                    <label asp-for="Capacidade" class="form-label">Capacidade <span class="text-danger">*</span></label>
                    <input asp-for="Capacidade" type="number" class="form-control" min="10" max="100" required value="35" />
                </div>
            </div>
            <div class="text-danger">@Html.ValidationSummary(true)</div>
        </div>
    </div>
    <div class="d-flex justify-content-end gap-2">
        <a asp-action="Index" class="btn btn-outline-secondary btn-no-focus">Voltar</a>
        <button type="submit" class="btn text-white btn-brand btn-no-focus">Salvar</button>
    </div>
</form>