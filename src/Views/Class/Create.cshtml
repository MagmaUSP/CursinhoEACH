@{ ViewData["Title"] = "Adicionar turma"; int currentYear = DateTime.UtcNow.Year; }
<p class="text-muted">Cadastrar nova turma.</p>
<form asp-action="CreatePost" method="post" class="needs-validation" novalidate autocomplete="off" id="createTurmaForm">
    @Html.AntiForgeryToken()
    <div class="card mb-3">
        <div class="card-body">
            <h6 class="mb-3">Dados da turma</h6>
            <div class="row g-3">
                <div class="col-12 col-md-4">
                    <label for="Ano" class="form-label">Ano <span class="text-danger" aria-hidden="true">*</span><span class="visually-hidden"> (obrigatório)</span></label>
                    <select class="form-select" id="Ano" name="Ano" required>
                        <option value="" disabled selected>Selecione...</option>
                        @for (int y = currentYear + 1; y >= 2015; y--) { <option value="@y">@y</option> }
                    </select>
                    <div class="invalid-feedback">Selecione o ano.</div>
                </div>
                <div class="col-12 col-md-4">
                    <label for="Periodo" class="form-label">Período <span class="text-danger" aria-hidden="true">*</span><span class="visually-hidden"> (obrigatório)</span></label>
                    <select class="form-select" id="Periodo" name="Periodo" required>
                        <option value="" disabled selected>Selecione...</option>
                        <option value="M">Matutino</option>
                        <option value="V">Vespertino</option>
                        <option value="N">Noturno</option>
                    </select>
                    <div class="invalid-feedback">Selecione o período.</div>
                </div>
                <div class="col-12 col-md-4">
                    <label for="Capacidade" class="form-label">Capacidade <span class="text-danger" aria-hidden="true">*</span><span class="visually-hidden"> (obrigatório)</span></label>
                    <input type="number" class="form-control" id="Capacidade" name="Capacidade" min="10" max="100" required value="10" />
                    <div class="invalid-feedback">Informe a capacidade (10 a 100).</div>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-end gap-2">
        <a asp-action="Index" class="btn btn-outline-secondary btn-no-focus">Voltar</a>
        <button type="submit" class="btn text-white btn-brand btn-no-focus">Salvar</button>
    </div>
</form>